<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="empty" xsi:noNamespaceSchemaLocation="../../../../../../../lib/internal/Magento/Framework/View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="Cmsmart_Marketplace::js/treeview/jquery.treeview.css"/>
        <css src="Cmsmart_Marketplace::css/product.css"/>
        <css src="jquery/fileUploader/css/jquery.fileupload-ui.css"/>
    </head>
    <body>
        <referenceContainer name="content">
            <block class="Cmsmart\Marketplace\Block\Catalog\Product\EditProductForm" name="marketplace_product_edit" template="catalog/product/edit_product_form.phtml"/>
        </referenceContainer>

        <referenceContainer name="marketplace_product_edit">
            <!-- <block class="Magento\Framework\View\Element\Template" name="marketplace_product_add_option" template="Cmsmart_Marketplace::catalog/product/edit/option.phtml" cacheable="false"/> -->
            <block class="Cmsmart\Marketplace\Block\Catalog\Product\Helper\Form\Gallery\Content" name="marketplace_product_add_gallery" template="catalog/product/helper/gallery.phtml" cacheable="false"/>
            <block name="mk_downloadable_items" class="Cmsmart\Marketplace\Block\Catalog\Product\Edit\Tab\Downloadable">
                <block name="mk.catalog.product.edit.tab.downloadable.links" class="Cmsmart\Marketplace\Block\Catalog\Product\Edit\Tab\Downloadable\Links" />
                <block class="Cmsmart\Marketplace\Block\Catalog\Product\Edit\Tab\Downloadable\Samples" />
            </block>
            <block class="Cmsmart\Marketplace\Block\Catalog\Product\Edit\Variations\Config" name="marketplace_product_add_configurable" template="catalog/product/edit/configurable.phtml" cacheable="false"/>

            <block class="Cmsmart\Marketplace\Block\Catalog\Product\Edit\Tab\Associated" name="marketplace_product_related_product" template="catalog/product/edit/associated/related.phtml" ifconfig="cmsmart_mp/product_settings/allow_associated_product" cacheable="false"/>
            <block class="Cmsmart\Marketplace\Block\Catalog\Product\Edit\Tab\Associated" name="marketplace_product_upsell_product" template="catalog/product/edit/associated/upsell.phtml" ifconfig="cmsmart_mp/product_settings/allow_associated_product" cacheable="false"/>
            <block class="Cmsmart\Marketplace\Block\Catalog\Product\Edit\Tab\Associated" name="marketplace_product_crosssell_product" template="catalog/product/edit/associated/crosssell.phtml" ifconfig="cmsmart_mp/product_settings/allow_associated_product" cacheable="false"/>

            <referenceContainer name="marketplace_product_related_product">
                <uiComponent name="marketplace_related_product_listing"/>
            </referenceContainer>
            <referenceContainer name="marketplace_product_upsell_product">
                <uiComponent name="marketplace_upsell_product_listing"/>
            </referenceContainer>
            <referenceContainer name="marketplace_product_crosssell_product">
                <uiComponent name="marketplace_crosssell_product_listing"/>
            </referenceContainer>
        </referenceContainer>

        <referenceBlock name="marketplace_product_add_option">
            <block class="Magento\Framework\View\Element\Template" name="new-option" template="Cmsmart_Marketplace::catalog/product/edit/option/import.phtml" cacheable="false"/>
        </referenceBlock>


        <referenceBlock name="marketplace_product_add_gallery">
            <block class="Cmsmart\Marketplace\Block\Catalog\Product\Edit\Tab\NewVideo" name="new-video" template="catalog/product/edit/video.phtml" cacheable="false"/>
        </referenceBlock>

        <referenceBlock name="marketplace_product_add_configurable">
            <block class="Cmsmart\Marketplace\Block\Catalog\Product\Edit\Variations\Config\Matrix" name="sellermatrix" template="catalog/product/edit/configurable/matrix.phtml" cacheable="false"/>
        </referenceBlock
        >
        <referenceBlock name="sellermatrix">
            <block class="Cmsmart\Marketplace\Block\Catalog\Component\StepsWizard" name="variation-steps-wizard">
                <block class="Cmsmart\Marketplace\Block\Catalog\Product\Steps\SelectAttributes" name="step1" template="catalog/product/edit/attribute/steps/select_attributes.phtml">
                    <uiComponent name="marketplace_product_attributes_listing"/>
                </block>
                <block class="Cmsmart\Marketplace\Block\Catalog\Product\Steps\AttributeValues" name="step2" template="catalog/product/edit/attribute/steps/attributes_values.phtml"/>
                <block class="Cmsmart\Marketplace\Block\Catalog\Product\Steps\Bulk" name="step3" template="catalog/product/edit/attribute/steps/bulk.phtml"/>
                <block class="Cmsmart\Marketplace\Block\Catalog\Product\Steps\Summary" name="step4" template="catalog/product/edit/attribute/steps/summary.phtml"/>
            </block>
        </referenceBlock>

        <referenceBlock name="new-option">
            <uiComponent name="product_option_listing"/>
        </referenceBlock>
    </body>
</page>