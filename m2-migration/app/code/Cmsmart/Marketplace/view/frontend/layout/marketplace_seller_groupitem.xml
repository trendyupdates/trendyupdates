<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="Cmsmart_Marketplace::vendors/bootstrap/css/bootstrap.min.css"/>
        <css src="Cmsmart_Marketplace::css/group-item.css"/>
    </head>
    <body>
        <referenceBlock name="page.main.title" remove="true"/>
        <referenceContainer name="content">
            <block class="Cmsmart\Marketplace\Block\Catalog\Product\MainItem" name="marketplace.seller.main.item"
                   template="seller/main-item.phtml" cacheable="false"/>
            <block class="Cmsmart\Marketplace\Block\Catalog\Product\GroupItem" name="marketplace.seller.group.item"
            template="seller/group-item.phtml" after="marketplace.seller.main.item" cacheable="false"/>
        </referenceContainer>
    </body>
</page>
