function myCatSelect(e){
	
	require(['jquery'], function($){ 
		var el = jQuery(e);
		jQuery("#top_tree .selected").css("background", "none");
		if(el.is(':checked')){
		} else {
			jQuery('#btn_save_icon').attr('data-bind', "");
			reloadIcon(el);
		}
		el.next().css("background", "#f5d6c7 none repeat scroll 0 0");
	});
}
	
