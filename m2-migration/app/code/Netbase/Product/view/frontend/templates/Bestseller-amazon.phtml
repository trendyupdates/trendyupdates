			$('#bestseller-product-amazon ul.tabs li').click(function(event){

				
				var tab_id = $(this).attr('data-tab');
				var cat_id = $(this).attr('data-rev');


				$('#bestseller-product-amazon ul.tabs li').removeClass('current');
				$('#bestseller-product-amazon .tab-content').removeClass('show');
