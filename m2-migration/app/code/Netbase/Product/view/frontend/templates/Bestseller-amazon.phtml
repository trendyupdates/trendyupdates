				if (hasloaded) {
					var param = {
						'categoryId':  cat_id,
						'type' : 'bestseller',
						'home' : 'amazon',
					};
					$.ajax({
						url: "<?php echo $this->getUrl('product/index/index') ?>",
						data: param,
						type: "POST",
						showLoader: true,
						dataType: 'json'
					}).done(function (data) { 
						var html = $(data.cate_view);
						$("#bestseller-product-amazon div[data-rev='"+cat_id+"']").html(html);
					});
				} 
				$("#bestseller-product-amazon div[data-rev='"+cat_id+"']").addClass('loaded');
			})
		});
    }); 
