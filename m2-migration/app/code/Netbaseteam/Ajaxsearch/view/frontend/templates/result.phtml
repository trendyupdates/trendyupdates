<?php
	$cateResult = $this->getCateResult();
	$helper = $this->helper('Netbaseteam\Ajaxsearch\Helper\Data');
?>

<div id="nb_tab_result">
	<ul class="nb_result_list">
		<li class="nb_product_tab active">
			<a href="#">Products</a>
		</li>
		<?php if ($helper->getEnableSearchCate()): ?>
			<li class="nb_cate_tab">
				<a href="#"><?php echo 'Categories&nbsp;('.count($cateResult).')'; ?></a>
			</li>
		<?php endif ?>
	</ul>
	<div style="clear: both;"></div>

	<div class="nb_cate_result">
