					}else{
						$nameCate =  $cate['name'];
					}
				?>
				<li class="nb_cate_item">
					<a href="<?php echo $cate['url']; ?>"><?php echo $nameCate; ?></a>
				</li>
			<?php endforeach ?>
		</ul>
	</div>
</div>

