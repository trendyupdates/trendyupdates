<?xml version="1.0"?>

<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="catalog.leftnav">
            <action method="setTemplate" ifconfig="cmsmart_navigation/general/enable">
                <argument name="template" xsi:type="string">Netbaseteam_Navigation::view.phtml</argument>
            </action>
        </referenceBlock>

        <referenceBlock name="catalog.navigation.renderer">
            <action method="setTemplate" ifconfig="cmsmart_navigation/general/enable">
                <argument name="template" xsi:type="string">Netbaseteam_Navigation::filter.phtml</argument>
            </action>
        </referenceBlock>

        <referenceBlock name="category.products">
            <action method="setTemplate" ifconfig="cmsmart_navigation/general/enable">
                <argument name="template" xsi:type="string">Netbaseteam_Navigation::products.phtml</argument>
            </action>
        </referenceBlock>
    </body>
</page>
